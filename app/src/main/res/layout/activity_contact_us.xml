<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ContactUsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/textContactDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you have any questions, app feedback, feature requests, or support inquiries, you can contact us using the email below.\n\nWe try to respond as quickly as possible."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Email Label -->
            <TextView
                android:id="@+id/textEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Email Address -->
            <TextView
                android:id="@+id/textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="petshall.com@gmail.com"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:autoLink="email"
                android:layout_marginBottom="16dp" />

            <!-- Privacy Contact Note -->
            <TextView
                android:id="@+id/textPrivacyNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For any privacy or data-related questions, please also use the same email address."
                android:textSize="16sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
